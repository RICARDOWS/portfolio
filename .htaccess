<IfModule mod_rewrite.c>
    RewriteEngine on

    # Deshabilitar la visualizaci√≥n de directorios
    Options -Indexes

    # Denegar la escritura a todos los archivos y carpetas, excepto a la carpeta 'dist'
    <FilesMatch "^(?!dist\/).*$">
        Order Allow,Deny
        Deny from all
    </FilesMatch>

    # Permitir la lectura
    <Files "*">
        Order Allow,Deny
        Allow from all
    </Files>

    RewriteEngine on
    RewriteCond %{HTTP_HOST} ^ricardobebeto.me$ [NC,OR]
    RewriteCond %{HTTP_HOST} ^www.ricardobebeto.me$
    RewriteCond %{REQUEST_URI} !dist/
    RewriteRule (.*) dist/$1 [L]
</IfModule>